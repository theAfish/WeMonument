page{
    background-color: #f5f5f5;
    position: relative;
    width: 100%;
    height: 100%;
}
::-webkit-scrollbar {
  display: none;
}

.container{
	background-color: #000000;
	height: 100%;
	width: 100%;
	overflow-y: auto;
	position: absolute;
}

.info_model{
	width: 100%;
	background-color: #FFFFFF;
}
.info_model .item{
	display: flex;
	padding: 0 20rpx;
	min-height: 100rpx;
	font-size: 28rpx;
	color: #343434;
}
.info_model .arrow_model:active{
	background-color: #F5F5F5;
}
.info_model .item+.item{
	border-top: 1px solid #e8e8e8;
}
.info_model .item .icon{
	margin: 25rpx 0 auto;
}
.info_model .item .content{
	margin: 25rpx 20rpx;
	line-height: 50rpx;
}
.info_model .item .arrow{
	margin: auto 0 auto auto;
}
.info_model .item .sign_btn{
	width: 100%;
	margin: 25rpx auto;
	line-height: 80rpx;
	height: 80rpx;
	padding: 0;
	color: #FFFFFF;
	background: var(--backgroudColor);
	color: var(--frontColor);
  box-shadow: none;
}

.info_model .item .sign_btn:active{
	opacity: 0.8;
}

.info_model .item .sign_btn[disabled] {
	color: hsla(0,0%,100%,.8);
	opacity: 1;
}

.content_model{
	color: #343434;
	width: calc(100% - 60rpx);
	background-color: #000000;
	margin-top: 20rpx;
	padding: 30rpx;
	font-size: 28rpx;
	line-height: 50rpx;
	padding-bottom: var(--safeBottom);
}
.content_model view{
	width: 100%;
}
.content_model image{
	width: 100%;
	height: auto;
}
.content_model view+view,.content_model image+view,.content_model view+image{
	margin-top: 50rpx;
}

.content_model image+image{
	margin-top: -16rpx;
}

.image{
  width: 80rpx;
  height: 120rpx;
}

.head {
	display: flex;
	align-items: center;
	justify-content: center;
  font-weight: bold;
  font-size: large;
  color: #fff;
}

.tail{
	width: 100%;
	display: flex;
	align-items: center;
	justify-content: center;
	text-align: center;
	position: fixed;
	bottom: 2%;
  font-weight:lighter;
  font-size: small;
  color: #aaa;
}

.interaction {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.mourning{
  display: flex;
  align-items: center;
	justify-content: center;
	flex-direction: column;
  color: rgb(128, 128, 128);
}

.list {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.name-box {
  display: flex;
  font-weight: bold;
  align-items: center;
  justify-content: center;
  width: 100px;
  height: 20px;
  color: #fff;
}

.job-box {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100px;
  height: 20px;
  color: #fff;
}